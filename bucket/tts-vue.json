    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$CmdString = \"$dir\\$version\\tts-vue-$version.exe /S /D=$dir\"",
        "Invoke-Expression $CmdString",
        "create_app_lnk \"$dir\\tts-vue.exe\" \"$scoop_apps_lnk\\tts-vue.lnk\"",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:APPData\\tts-vue\") @(\"$persist_dir\")",
        "Write-Host \"There will be a delayed backend behavior soon: Delete redundant files after 10 seconds\n\" -f Yellow",
        "$null=Start-Job -ScriptBlock {",
        "   param($path1,$path2)",
        "   Start-Sleep -Seconds 10",
        "   @($path1,$path2) | ForEach-Object {",
        "       if (Test-Path($_)) { Remove-Item -Force -Recurse $_ }",
        "   }",
        "} -ArgumentList \"$dir\\$version\",\"$env:UserProfile\\Desktop\\tts-vue.lnk\",\"$env:AppData\\Microsoft\\Windows\\Start Menu\\Programs\\tts-vue.lnk\""
    ],
    "pre_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "stop_process"
    ],
    "post_uninstall": [
        "$_bucket=(scoop bucket list | where-Object {$_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$_bucket\\bin\\utils.ps1\"",
        "$data=@(\"$env:APPData\\tts-vue\",\"$scoop_apps_lnk\\tts-vue.lnk\")",
        "$data | ForEach-Object {",
        "   if (Test-Path($_)) {",
        "       Remove-Item -Force -Recurse $_",
        "       Write-Host \"Removing $_\" -f Yellow",
        "   }",
        "}"
    ],
