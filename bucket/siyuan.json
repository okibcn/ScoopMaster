    },
    "url": "https://github.com/siyuan-note/siyuan/releases/download/v3.0.0/siyuan-3.0.0-win.exe",
    "hash": "eeb8561b48ab1698392682706f30d801dcf4163b8a2b876d91038577f273d8e7",
    "shortcuts": [
        [
            "SiYuan.exe",
            "SiYuan"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\siyuan-$($version)-win.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\SiYuan.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\SiYuan\",\"$env:AppData\\SiYuan-Electron\") @(\"$persist_dir\\SiYuan\",\"$persist_dir\\SiYuan-Electron\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\SiYuan.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\SiYuan\",\"$env:AppData\\SiYuan-Electron\")",
        "$ui_exe=\"$dir\\Uninstall SiYuan.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$env:LocalAppData\\siyuan-updater\")"
    ],
    "checkver": {
        "github": "https://github.com/siyuan-note/siyuan"
    },
    "autoupdate": {
        "url": "https://github.com/siyuan-note/siyuan/releases/download/v$version/siyuan-$version-win.exe"
    }
}
