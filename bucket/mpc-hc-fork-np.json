        "32bit": {
            "url": "https://github.com/clsid2/mpc-hc/releases/download/2.1.5/MPC-HC.2.1.5.x86.exe#/setup.exe",
            "hash": "66588ba3fd7ec524f06a84869e71d71a8781a79319008866ef2aaa9e9651e5c0"
