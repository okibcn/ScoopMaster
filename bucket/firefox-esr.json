        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/115.2.1esr/win32/en-US/Firefox%20Setup%20115.2.1esr.exe#/dl.7z",
            "hash": "sha512:e8ecd6c43f490d9d70f8efae2a9fe17755cbd20b22d01073e963a20486b181e5967f71460d94113b70227f9736d23adb8f492845e7d61ac3b34393099d5e52fa"
