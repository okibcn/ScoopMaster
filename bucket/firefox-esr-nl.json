        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/115.3.1esr/win32/nl/Firefox%20Setup%20115.3.1esr.exe#/dl.7z",
            "hash": "sha512:288325e5d729fe1b3baa1ec2613d303ddff7d1867bdca4ba1a887d99c449e97a65926322c30a0e3b57495e2a1908b5340fbe629d33ac6365a54ef3bfa357080b"
