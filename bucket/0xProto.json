{
    "description": "Free and Open-source font for programming.",
    "version": "1.000",
    "license": "OFL-1.1",
    "homepage": "https://github.com/0xType/0xProto",
    "url": "https://github.com/0xType/0xProto/releases/download/1.000/0xProto-Regular.ttf",
    "hash": "",
    "checkver": "github",
    "depends": "sudo",
    "installer": {
        "script": [
            "Get-ChildItem $dir -File -Filter '*.ttf' | ForEach-Object {",
            "    Write-Host Installing $_.Name",
            "    $fontdir = \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"",
            "    $fontname = '0xProto Regular (TrueType)'",
            "    New-ItemProperty -Path 'registry::HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name \"$fontname\" -Value \"$fontdir\\$($_.Name)\" -Force | Out-Null",
            "    mkdir -Path \"$fontdir\" -Force | Out-Null",
            "    Copy-Item -LiteralPath \"$($_.FullName)\" -Destination \"$fontdir\"",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "Get-ChildItem $dir -File -Filter '*.ttf' | ForEach-Object {",
            "    Write-Host Uninstalling $_.Name",
            "    $fontname = '0xProto Regular (TrueType)'",
            "    Remove-ItemProperty -Path 'registry::HKEY_CURRENT_USER\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name \"$fontname\" -Force -ErrorAction SilentlyContinue",
            "    Remove-Item -LiteralPath \"$fontdir\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
            "}",
            "Write-Host \"The '$app' Font family has been uninstalled and will not be present after restarting your computer.\" -Foreground Magenta"
        ]
    }
}
