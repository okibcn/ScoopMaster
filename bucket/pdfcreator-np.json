{
    "version": "5.1.1",
    "homepage": "https://www.pdfforge.org/pdfcreator",
    "description": "The popular PDF converter that offers all the features that you need to get your work done quickly and efficiently.",
    "license": "AGPL-3.0-or-later",
    "url": "https://cdn.download.pdfforge.org/pdfcreator/5.1.1/PDFCreator-5_1_1-Setup.exe#/dl.7z",
    "hash": "md5:0fb8c933f54e56df20807888c0439ad2",
    "pre_install": [
        "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
        "Start-Process \"$dir\\PDFCreatorSetup.exe\" -Wait -Verb 'RunAs' -Args @('/COMPONENTS=program', '/VERYSILENT', '/NORESTART')"
    ],
    "architecture": {
        "32bit": {
            "installer": {
                "script": [
                    "$setup_x64 = Get-Item \"$dir\\PDFCreator-*_x64.msi\"; $setup_x86_delta = Get-Item \"$dir\\PDFCreator-*_x86.msi.delta\"",
                    "$setup_x86 = $setup_x86_delta.BaseName",
                    "Start-Process \"$dir\\Octodiff.exe\" -Wait -Args @('patch', \"$setup_x64\", \"$setup_x86_delta\", \"$setup_x86\")",
                    "Rename-Item $setup_x86 'PDFCreator_Setup_x86.msi'"
                ]
            },
            "pre_uninstall": [
                "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
                "Start-Process 'msiexec' -Wait -Verb 'RunAs' -Args @('/x', \"$dir\\PDFCreator_Setup_x86.msi\", '/qn')",
                "Start-Sleep -Seconds 2"
            ]
        },
        "64bit": {
            "installer": {
                "script": "Get-Item \"$dir\\PDFCreator-*_x64.msi\" | Rename-Item -NewName 'PDFCreator_Setup_x64.msi'"
            },
            "pre_uninstall": [
                "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
                "Start-Process 'msiexec' -Wait -Verb 'RunAs' -Args @('/x', \"$dir\\PDFCreator_Setup_x64.msi\", '/qn')",
                "Start-Sleep -Seconds 2"
            ]
        }
    },
    "checkver": {
        "url": "https://download.pdfforge.org/download/pdfcreator/list",
        "regex": "PDFCreator\\s([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://cdn.download.pdfforge.org/pdfcreator/$version/PDFCreator-$underscoreVersion-Setup.exe#/dl.7z",
        "hash": {
            "url": "https://download.pdfforge.org/download/pdfcreator/list",
            "regex": "(?s)$basename.*?MD5\\:\\s$md5"
        }
    }
}
