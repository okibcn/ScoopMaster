{
    "##": "Thunderbird in German non portable (silent installation, no MaintenanceService)",
    "version": "115.6.0",
    "description": "A free email application thatâ€™s easy to set up and customize.",
    "homepage": "https://www.thunderbird.net",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/thunderbird/releases/115.6.0/win64/de/Thunderbird%20Setup%20115.6.0.exe",
            "hash": "sha512:bba22e1e82fb5a25ec0279563f4ed0dfdaa741520d311ef7020dcb6acd3733cb71b53ac4c04b9a6502a9ba12c3b786813acd7885bf40eb1052fbfd5e17396d9f"
        }
    },
    "installer": {
        "args": [
            "/S",
            "/MaintenanceService=false"
        ]
    },
    "pre_uninstall": "Start-Process 'taskkill' -Verb 'RunAs' -WindowStyle 'Hidden' -ArgumentList @('/F', '/IM', 'defenerui.exe')",
    "uninstaller": {
        "script": "Start-Process \"$env:ProgramFiles\\Mozilla Thunderbird\\uninstall\\helper.exe\" -ArgumentList @('/S') -Wait -Verb RunAs"
    },
    "checkver": {
        "url": "https://www.thunderbird.net/thunderbird/all/",
        "regex": "thunderbird/([\\d.]+)/"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/win64/de/Thunderbird%20Setup%20$version.exe",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/thunderbird/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/de-DE/$basename"
                }
            }
        }
    }
}
