{
    "version": "4.2.1",
    "description": "基于 electron 的开源工具箱，自由集成丰富插件。Electron based open source toolbox, free integration of rich plug-ins.",
    "homepage": "https://github.com/rubickCenter/rubick",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/rubickCenter/rubick/blob/master/LICENSE"
    },
    "url": "https://github.com/rubickCenter/rubick/releases/download/v4.2.1/rubick-Setup-4.2.1-x64.exe",
    "hash": "0abf70b7efd8c855c270bcecc237809ba48b08c22f582f17bf33fb5c7f55d1b1",
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\rubick-Setup-$($version)-x64.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\rubick.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\rubick\") @(\"$persist_dir\\rubick\")",
        "create_app_lnk $core_exe \"$desktop\\rubick.lnk\"",
        "create_app_lnk $core_exe \"$scoop_apps_lnk\\rubick.lnk\"",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\rubick.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\rubick\")",
        "$ui_exe=\"$dir\\Uninstall rubick.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$desktop\\rubick.lnk\",\"$scoop_apps_lnk\\rubick.lnk\",\"$env:LocalAppData\\Programs\\rubick\",\"$env:LocalAppData\\rubick-updater\")"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/rubickCenter/rubick/releases/download/v$version/rubick-Setup-$version-x64.exe"
    }
}
