    ],
    "shortcuts": [
        [
            "SFP_UI.exe",
            "SFP"
        ]
    ],
    "persist": "SFP.config",
    "checkver": {
        "url": "https://api.github.com/repos/PhantomGamers/SFP/releases?per_page=1",
        "jsonpath": "$[0].tag_name",
