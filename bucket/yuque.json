    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\Yuque-$($version).exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\语雀.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\yuque-desktop\") @(\"$persist_dir\\yuque-desktop\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\Yuque\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\yuque-desktop\")",
        "$ui_exe=\"$dir\\Uninstall 语雀.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$env:LocalAppData\\yuque-desktop-updater\")"
    ],
    "checkver": {
        "url": "https://www.yuque.com/download",
        "regex": "%2F(?<hash>[\\w\\d]+)%2FYuque-(?<version>[\\d\\.]+).exe"
    },
    "autoupdate": {
        "url": "https://app.nlark.com/yuque-desktop/$version/$matchHash/Yuque-$version.exe"
    }
