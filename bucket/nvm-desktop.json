{
    "version": "3.0.0",
    "description": "一个用于管理多个活动 node.js 版本的桌面应用程序。A desktop application to manage multiple active node.js versions.",
    "homepage": "https://github.com/1111mp/nvm-desktop",
    "license": {
        "identifier": "MIT",
        "url": "https://github.com/1111mp/nvm-desktop/blob/main/LICENSE"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/1111mp/nvm-desktop/releases/download/v3.0.0/nvm-desktop_Setup_win_x64_3.0.0.exe#/_installers_.exe",
            "hash": "ef12fbfce09084ac655db5f66cd5f1970baf10c8985d4bc21f018b3dd5ae8b0d"
        },
        "arm64": {
            "url": "https://github.com/1111mp/nvm-desktop/releases/download/v3.0.0/nvm-desktop_Setup_win_arm64_3.0.0.exe#/_installers_.exe",
            "hash": "c5f004bb8824cce417df5de9ba73e50e3d6e87dcbb848d571ad4ed3c4e00c26f"
        }
    },
    "shortcuts": [
        [
            "nvm-desktop.exe",
            "nvm-desktop"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\_installers_.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\nvm-desktop.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\NVM-Desktop\",\"$env:UserProfile\\.nvmd\") @(\"$persist_dir\\NVM-Desktop\",\"$persist_dir\\.nvmd\")",
        "clean_redundant_files @($path_exe,\"$apps_lnk\\nvm-desktop.lnk\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "remove_files @(\"$env:AppData\\NVM-Desktop\",\"$env:UserProfile\\.nvmd\")",
        "$ui_exe=\"$dir\\Uninstall nvm-desktop.exe\"",
        "try{ & $ui_exe /S }catch{}",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$env:LocalAppData\\nvm-desktop-updater\")"
    ],
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/1111mp/nvm-desktop/releases/download/v$version/nvm-desktop_Setup_win_x64_$version.exe#/_installers_.exe"
            },
            "arm64": {
                "url": "https://github.com/1111mp/nvm-desktop/releases/download/v$version/nvm-desktop_Setup_win_arm64_$version.exe#/_installers_.exe"
            }
        }
    }
}
