    "post_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -file @(\"$dir\\screego.config\") @(\"$persist_dir\\screego.config\")",
        "$config = Get-Content \"$dir\\screego.config\" -Raw",
