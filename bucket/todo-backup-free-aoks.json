            "# Using script to get version number",
            "$url = 'https://www.easeus.com/backup-software/version-update-history.html'",
            "$regex = '<div class=\"version\">\\n<p class=\"t\">Version.\\d+<br>\\((\\d+)\\)</p>[\\n\\s\\w<=\\\">/]+<li>EaseUS Todo Backup Home \\d+</li>\\n</ul>\\n'",
