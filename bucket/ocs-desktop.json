    "homepage": "https://docs.ocsjs.com/docs/app",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://cdn.ocsjs.com/app/download/ocs-2.4.2-setup-win-x64.exe#/dl.7z",
            "hash": "19f19961fe528340e56a5ea34cd0788eb77f321e6d5c827e34b4d9377c812499",
