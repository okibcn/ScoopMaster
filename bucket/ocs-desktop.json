        [
            "OCS Desktop.exe",
            "OCS Desktop",
            "--user-data-dir=\"$dir\\User Data\""
        ]
    ],
    "persist": "User Data",
    "checkver": {
        "url": "https://github.com/ocsjs/ocs-desktop/tags",
        "regex": "/releases/tag/(?:v|V)?([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.ocsjs.com/app/download/ocs-$version-setup-win-x64.exe#/dl.7z"
            }
        }
    }
