    "pre_install": [
        "foreach ($savedFile in 'GameClients','ModuleCache','ServerList','settings') {",
        "    if (!(Test-Path \"$persist_dir\\$savedFile.json\")) {",
        "        $fileType = ($savedFile -eq 'settings') ? '{}' : '[]'",
        "        Add-Content \"$dir\\$savedFile.json\" $fileType -Encoding Ascii",
        "    }",
        "}"
    ],
