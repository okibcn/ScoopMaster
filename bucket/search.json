{
    "version": "0.1.20230520",
    "description": "Search Scoop buckets: local, remote, zips, html",
    "homepage": "https://github.com/plicit/scoop-search-multisource",
    "license": "MIT",
    "notes": "To replace built-in scoop search, add this to $PROFILE: Invoke-Expression (&scoop-search-multisource.exe --hook)",
    "url": "https://hub.gitmirror.com/https://github.com/plicit/scoop-search-multisource/releases/download/v0.1.20230520/scoop-search-multisource.exe",
    "bin": [
        "scoop-search-multisource.exe",
        ["scoop-search-multisource.exe", "scoops"]
    ],
    "post_install": [
        "New-Item -ItemType Directory -Force -Path \"$env:USERPROFILE\\Documents\\WindowsPowerShell\"",
        "Add-Content -Path \"$env:USERPROFILE\\Documents\\WindowsPowerShell\\Microsoft.PowerShell_profile.ps1\" -Value \"Invoke-Expression (&scoop-search-multisource.exe --hook)\""
    ],
    "uninstaller": {
        "script": [
            "(Get-Content \"$env:USERPROFILE\\Documents\\WindowsPowerShell\\Microsoft.PowerShell_profile.ps1\") -notmatch \"Invoke-Expression (&scoop-search-multisource.exe --hook)\" | Out-File \"$env:USERPROFILE\\Documents\\WindowsPowerShell\\Microsoft.PowerShell_profile.ps1\""
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://hub.gitmirror.com/https://github.com/plicit/scoop-search-multisource/releases/download/v$version/scoop-search-multisource.exe"
    }
}
