            "}",
            "$date = json_path $page $.created_at",
            "Write-Output $version $date"
        ],
        "regex": "^(?<version>[\\w.-]+-dev)-(?<hash>\\w+) (?<year>\\d{4})-(?<month>\\d{2})-(?<day>\\d{2})[^ ]+$",
