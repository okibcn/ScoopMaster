{
    "version": "2.1.0-beta3",
    "notes": "LuaJIT is a Just-In-Time Compiler (JIT) for the Lua programming language.",
    "url": "https://luajit.org/download/LuaJIT-2.1.0-beta3.zip",
    "bin": "LuaJIT-2.1.0-beta3/src/luajit.exe",
    "env_add_path": "LuaJIT-2.1.0-beta3/src/",
    "env_set": {
        "LUAJIT_PATH": "LuaJIT-2.1.0-beta3/src/"
    },
    "extract_dir": "LuaJIT-2.1.0-beta3",
    "persist": "data",
    "depends": {
        "make": "main/make"
    },
    "post_install": [
        "cd LuaJIT-2.1.0-beta3/src && make"
    ]
}
