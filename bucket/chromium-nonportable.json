    "checkver": {
        "url": "https://github.com/Hibbiki/chromium-win64/releases//latest",
        "regex": "v(?<version>[\\d.]+)-r(?<rev>[\\d]+)",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Hibbiki/chromium-win64/releases/download/v$version-r$matchRev/mini_installer.sync.exe"
            }
        }
    }
