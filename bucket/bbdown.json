        "普通视频：ffmpeg ，或 mp4box",
        "杜比视界：ffmpeg5.0以上或新版mp4box."
    ],
    "suggest": {
        "ffmpeg": "ffmpeg",
        "mp4box": "gpac"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/nilaoda/BBDown/releases/download/1.6.0/BBDown_1.6.0_20230715_win-x64.zip",
            "hash": "bfdaddf9fd84bae5dbc8cd13a876ee015675ffdfbe7f3e4f096f002a0b0c80bb"
        },
        "arm64": {
