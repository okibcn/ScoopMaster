{
    "version": "1.87.0",
    "description": "一个轻量级、功能强大，插件生态丰富的文件编辑器。Lightweight but powerful source code editor.",
    "homepage": "https://code.visualstudio.com/",
    "license": {
        "identifier": "Freeware",
        "url": "https://code.visualstudio.com/License/"
    },
    "architecture": {
        "64bit": {
            "url": "https://update.code.visualstudio.com/1.87.0/win32-x64-archive/stable#/dl.7z",
            "hash": "9ccef061383f0e03fba0606be021a50a5d4f175cfb515474b5968a55b88913e0"
        },
        "arm64": {
            "url": "https://update.code.visualstudio.com/1.87.0/win32-arm64-archive/stable#/dl.7z",
            "hash": "1ee3d0908283ca8785dd6bff9f22c85bb774397ef2af9a303f69cd76f2b977c5"
        }
    },
    "env_add_path": "bin",
    "shortcuts": [
        [
            "code.exe",
            "Visual Studio Code"
        ]
    ],
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "persist -dir @(\"$env:AppData\\Code\",\"$env:UserProfile\\.vscode\") @(\"$persist_dir\\Code\",\"$persist_dir\\.vscode\")",
        "create_app_lnk \"$dir\\Code.exe\" \"$desktop\\VS Code.lnk\"",
        "clean_redundant_files @(\"$apps_lnk\\Visual Studio Code\") 15"
    ],
    "pre_uninstall": [
        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process",
        "remove_files @(\"$desktop\\VS Code.lnk\",\"$env:AppData\\Code\",\"$env:UserProfile\\.vscode\")"
    ],
    "checkver": {
        "url": "https://code.visualstudio.com/sha?build=stable",
        "jsonpath": "$.products[?(@.platform.os == 'win32-x64-archive')].name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://update.code.visualstudio.com/$version/win32-x64-archive/stable#/dl.7z",
                "hash": {
                    "url": "https://code.visualstudio.com/sha?build=stable",
                    "jsonpath": "$.products[?(@.platform.os == 'win32-x64-archive')].sha256hash"
                }
            },
            "arm64": {
                "url": "https://update.code.visualstudio.com/$version/win32-arm64-archive/stable#/dl.7z",
                "hash": {
                    "url": "https://code.visualstudio.com/sha?build=stable",
                    "jsonpath": "$.products[?(@.platform.os == 'win32-arm64-archive')].sha256hash"
                }
            }
        }
    }
}
