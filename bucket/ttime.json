{
    "version": "0.9.5",
    "description": "一款简洁、高效、高颜值的输入、截图、划词翻译软件。A concise, efficient, and high-quality input, screenshot, and word translation software.",
    "homepage": "https://github.com/InkTimeRecord/TTime",
    "license": {
        "identifier": "Apache License 2.0(with the additional conditions)",
        "url": "https://github.com/InkTimeRecord/TTime/blob/main/LICENSE.txt"
    },
    "url": "https://github.com/InkTimeRecord/TTime/releases/download/v0.9.5/TTime-0.9.5-setup.exe",
    "hash": "383d9ed7883218949eebfc71eb2324298354f21f4ead079caf6919cbe9ecd28e",
    "pre_install": [
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "$path_exe=\"$dir\\TTime-$($version)-setup.exe\"",
        "& $path_exe /S /D=$dir",
        "$core_exe=\"$dir\\TTime.exe\"",
        "sleep_install $core_exe",
        "persist -dir @(\"$env:AppData\\time-translate\") @(\"$persist_dir\\time-translate\")",
        "create_app_lnk $core_exe \"$scoop_apps_lnk\\TTime.lnk\"",
        "clean_redundant_files @($path_exe,\"C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs\\TTime.lnk\") 15"
    ],
    "pre_uninstall": [

        "$bucket=(scoop bucket list | where-Object { $_.Source -match '(gitee|github).com/abgox/abgo_bucket'})[0].Name",
        ". \"$bucketsdir\\$bucket\\bin\\utils.ps1\"",
        "stop_process $false",
        "$ui_exe=\"$dir\\Uninstall TTime.exe\"",
        "& $ui_exe /S",
        "sleep_uninstall $ui_exe",
        "remove_files @(\"$scoop_apps_lnk\\TTime.lnk\",\"$env:AppData\\time-translate\")"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/InkTimeRecord/TTime/releases/download/v$version/TTime-$version-setup.exe"
    }
}
