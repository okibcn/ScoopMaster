{
    "version": "21",
    "description": "GraalVM is a high performance JDK that speeds up the performance of Java and JVM-based applications and simplifies the building and running of Java cloud native services.",
    "homepage": "https://www.graalvm.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://www.oracle.com/downloads/licenses/graal-free-license.html"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.oracle.com/graalvm/21/latest/graalvm-jdk-21_windows-x64_bin.zip",
            "hash": "16ec0dbd1d4707870410bd59212186087a5bc126c31917e9836daed8018053c8"
        }
    },
    "pre_install": "Move-Item -Path \"$dir\\graalvm-jdk*\\*\" \"$dir\" | Remove-Item \"$dir\\graalvm-jdk*\" -Force",
    "env_add_path": "bin",
    "env_set": {
        "JAVA_HOME": "$dir",
        "GRAALVM_HOME": "$dir"
    },
    "checkver": {
        "script": [
            "$relRes = $(Invoke-WebRequest https://docs.oracle.com/en/graalvm/).Content",
            "$relRes -match 'Oracle GraalVM for JDK (\\d+)'",
            "$major = $Matches.1",
            "$verRes = $(Invoke-WebRequest \"https://docs.oracle.com/en/graalvm/jdk/$major/docs/release-notes/\").Content",
            "$verRes -match 'Oracle GraalVM for JDK ([\\d.]+)</h1>'",
            "$version = $Matches.1",
            "\"$version-$major\""
        ],
        "regex": "([\\d.]+)-(?<jdk>\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.oracle.com/graalvm/$matchJdk/latest/graalvm-jdk-$version_windows-x64_bin.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
