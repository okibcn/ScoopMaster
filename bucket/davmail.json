{
    "version": "1",
    "homepage": "http://davmail.sourceforge.net/",
    "description": "A POP/IMAP/SMTP/Caldav/Carddav/LDAP exchange gateway allowing users to use any mail/calendar client with an Exchange server, even from the internet or behind a firewall through Outlook Web Access (OWA).",
    "license": "GPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://sourceforge.net/projects/davmail/files/davmail/6.1.0/davmail-6.1.0-3423-windows-standalone.zip",
            "hash": "md5:43f684806abdd8586a2c6d871d7bd5a3"
        }
    },
    "pre_install": [
        "Get-ChildItem \"$dir\\*.exe\" | Rename-Item -NewName { $_ -replace ('64', '') }",
        "Set-Content \"$dir\\remove-davmail-service.ps1\" \"Stop-Service -Name 'DavMail' -Force; Remove-Service -Name 'DavMail'; 'DavMail service was unregistered!' | Write-Output\" -Encoding 'utf8'",
        "Set-Content \"$dir\\add-davmail-service.ps1\" '& \"$PSScriptRoot\\davmailservice.exe\" ''--WinRun4J:RegisterService''; ''DavMail service was registered!'' | Write-Output' -Encoding 'utf8'"
    ],
    "bin": [
        "davmail.exe",
        "davmailservice.exe",
        "add-davmail-service.ps1",
        "remove-davmail-service.ps1"
    ],
    "shortcuts": [
        [
            "davmail.exe",
            "DavMail"
        ]
    ],
    "checkver": {
        "sourceforge": "davmail",
        "regex": "davmail-([\\d.-]+)-windows"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://sourceforge.net/projects/davmail/files/davmail/$matchHead/davmail-$version-windows-standalone.zip",
                "hash": {
                    "url": "https://sourceforge.net/projects/davmail/rss?path=/davmail",
                    "xpath": "/content"
                }
            }
        }
    }
}
