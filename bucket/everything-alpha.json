{
    "version": "1.5.0.1338a",
    "description": "Locate files and folders by name instantly.",
    "homepage": "https://www.voidtools.com",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://www.voidtools.com/Everything-1.5.0.1338a.x64.zip",
            "hash": "dc28c24ed0b135c1d329d57b64e593acd4b4acfaa5e798ee044fd89376d5e6df"
        },
        "32bit": {
            "url": "https://www.voidtools.com/Everything-1.5.0.1338a.x86.zip",
            "hash": "67bebfff13277ad27f7a0df5451d99ab0957083ce2bd39ebb0b56c935fc5762b"
        }
    },
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "if (Test-Path \"$dir\\Everything64.exe\") { Rename-Item \"$dir\\Everything64.exe\" 'Everything.exe' }",
        "if (Test-Path \"$dir\\Everything86.exe\") { Rename-Item \"$dir\\Everything86.exe\" 'Everything.exe' }",
        "if (!(Test-Path \"$persist_dir\\Everything-1.5a.ini\")) { Invoke-ExternalCommand \"$dir\\Everything.exe\" -Args @('-install-config null') | Out-Null }",
        "Get-ChildItem \"$persist_dir\\*\" -Include 'Everything-1.5a.ini', 'Everything-1.5a.db', 'Plugins-1.5a.ini', 'Bookmarks-1.5a.csv', 'Run History-1.5a.csv', 'Search History-1.5a.csv' | Copy-Item -Destination \"$dir\" -ErrorAction SilentlyContinue",
        "Copy-Item \"$bucketsdir\\extras\\scripts\\everything\\uninstall-context.reg\" \"$dir\\\"",
        "$app_path = \"$dir\\Everything.exe\".Replace('\\', '\\\\')",
        "$reg_content = Get-Content \"$bucketsdir\\extras\\scripts\\everything\\install-context.reg\"",
        "$reg_content = $reg_content.replace('$app_path', $app_path)",
        "Set-Content \"$dir\\install-context.reg\" $reg_content -Encoding ASCII"
    ],
    "post_install": "reg import \"$dir\\install-context.reg\"",
    "uninstaller": {
        "script": [
            "Get-ChildItem \"$dir\\*\" -Include 'Everything-1.5a.ini', 'Everything-1.5a.db', 'Plugins-1.5a.ini', 'Bookmarks-1.5a.csv', 'Run History-1.5a.csv', 'Search History-1.5a.csv' | Copy-Item -Destination \"$persist_dir\" -ErrorAction SilentlyContinue -Force",
            "reg import \"$dir\\uninstall-context.reg\""
        ]
    },
    "bin": "Everything.exe",
    "shortcuts": [
        [
            "Everything.exe",
            "Everything"
        ]
    ],
    "checkver": {
        "url": "https://www.voidtools.com/forum/viewtopic.php?f=12&t=9787",
        "regex": "Everything-([\\d.]+a)\\.x86"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.voidtools.com/Everything-$version.x64.zip"
            },
            "32bit": {
                "url": "https://www.voidtools.com/Everything-$version.x86.zip"
            }
        }
    }
}
